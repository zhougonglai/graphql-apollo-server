{
  "name": "mongodb-api",
  "version": 2,
  "builds": [
    {
      "src": "src/*.*",
      "use": "@now/node-server"
    }
  ],
  "routes": [
    { "src": "/.*", "dest": "src/index.js" }
  ],
  "build": {
    "env": {
      "NODE_ENV": "production",
      "PORT": "@port"
    }
  },
  "env": {
    "MONGODB_URI": "@mongodb-uri"
  }
}
